{
    "$schema": "https://cmake.org/cmake/help/latest/json-schema/cmake-presets.json",
    "version": 8,
    "configurePresets": [
        {
            "name": "VS-MSVC",
            "displayName": "Visual Studio 17 2022 (MSVC)",
            "generator": "Visual Studio 17 2022",
            "binaryDir": "${sourceDir}/out/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "build-VS-MSVC-Debug",
            "configurePreset": "VS-MSVC",
            "configuration": "Debug"
        },
        {
            "name": "build-VS-MSVC-Release",
            "configurePreset": "VS-MSVC",
            "configuration": "Release"
        }
    ]
}
